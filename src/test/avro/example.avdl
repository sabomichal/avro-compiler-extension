/**
 * An example protocol in Avro IDL
 */
@namespace("com.github.sabomichal.avroextensions")
protocol Simple {

  @java-interface("com.github.sabomichal.avroextensions.State")
  record StateA {
    string name;
    long value;
  }

  @java-interface("com.github.sabomichal.avroextensions.State")
  record StateB {
    string name;
    boolean value;
  }

  record Record {
    union { StateA, StateB } state;
  }
}